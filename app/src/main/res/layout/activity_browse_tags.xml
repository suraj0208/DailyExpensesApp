<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suraj.dailyexpenses.BrowseTagsActivity">

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/activity_browse_tags_spin_months"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_vertical_margin" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/activity_browse_tags_spin_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/activity_browse_tags_spin_months"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/activity_browse_tags_spin_months"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_vertical_margin" />

    <FrameLayout
        android:id="@+id/activity_browse_tags_frame_layout_monthly_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/activity_browse_tags_btn_monthly_details_month_name"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_calendar_frame"
            android:gravity="top|center"
            android:padding="2dp"
            android:text="May"
            android:textColor="@android:color/white"
            android:textSize="@dimen/icon_text_size" />

        <TextView
            android:id="@+id/activity_browse_tags_tv_expenditure_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="15dp"
            android:text="may"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textview_icon_text_size" />
    </FrameLayout>

    <ListView
        android:id="@+id/activity_browse_tags_list_view_tags_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_browse_tags_spin_months" />

</RelativeLayout>
